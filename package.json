{
  "name": "openhim-core",
  "description": "The OpenHIM core application that provides logging and routing of http requests",
  "version": "7.0.0",
  "main": "./lib/server.js",
  "bin": {
    "openhim-core": "./bin/openhim-core.js"
  },
  "license": "MPL-2.0",
  "engines": {
    "node": ">= 12.14 < 13 || >= 14.16 < 15"
  },
  "spec": {
    "nodeVersion": ">= 2:12.14.0, nodejs < 2:13.0.0",
    "requires": [
      "nodejs"
    ],
    "environment": {
      "NODE_ENV": "production"
    }
  },
  "scripts": {
    "build": "npm run clean && babel src --out-dir lib -s",
    "build:watch": "npm run build -- -w",
    "clean": "rimraf lib/",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "prepare": "npm run build",
    "migrate:metrics": "node lib/migrateMetrics.js",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --verbose --fix | snazzy",
    "test": "export $(cat .env.test | xargs) && cross-env nyc mocha --timeout 30000 --exit --require @babel/register test/setupTest.js test/**/*.js && npm run lint",
    "test:unit": "cross-env NODE_ENV=test mocha --require @babel/register test/setupTest.js test/unit/**/*.js --watch",
    "test:int": "export $(cat .env.test | xargs) && cross-env mocha --timeout 30000 --require @babel/register test/setupTest.js test/integration/**/*.js --watch",
    "test:replica:set": "./test/resources/replica-set-test/setup.sh",
    "test:replica:set:cleanup": "./test/resources/replica-set-test/tear-down.sh",
    "test:seed": "node performance/seed.js",
    "test:seed:ci": "npm run test:seed -- --quiet",
    "start": "node lib/server.js",
    "stop": "pkill -SIGINT Core",
    "spec": "speculate"
  },
  "dependencies": {
    "agenda": "3.1.0",
    "atna-audit": "1.0.1",
    "axios": "^0.21.1",
    "babel-polyfill": "6.26.0",
    "basic-auth": "2.0.1",
    "bcryptjs": "2.4.3",
    "chokidar": "3.5.1",
    "cookie": "0.4.1",
    "forever-monitor": "^3.0.3",
    "form-data": "3.0.0",
    "glossy": "0.1.7",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "8.5.1",
    "kcors": "2.2.2",
    "koa": "2.13.1",
    "koa-bodyparser": "4.3.0",
    "koa-compress": "5.0.1",
    "koa-route": "3.2.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "mongodb": "^3.6.6",
    "mongodb-uri": "0.9.7",
    "mongoose": "^5.12.7",
    "mongoose-patch-history": "2.0.0",
    "nconf": "0.11.2",
    "nodemailer": "^6.6.0",
    "pem": "^1.14.4",
    "raw-body": "^2.4.1",
    "semver": "^7.3.5",
    "ssl-root-cas": "1.3.1",
    "uuid": "^8.3.2",
    "winston": "3.3.3",
    "winston-mongodb": "5.0.7",
    "xml2js": "^0.4.23",
    "xmldom": "^0.6.0",
    "xpath": "0.0.32"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "@babel/register": "^7.13.16",
    "codecov": "^3.8.1",
    "cross-env": "7.0.3",
    "faker": "5.5.3",
    "finalhandler": "^1.1.2",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "progress": "2.0.3",
    "rewire": "^5.0.0",
    "rimraf": "^3.0.2",
    "serve-static": "^1.14.1",
    "should": "13.2.3",
    "sinon": "^9.2.1",
    "snazzy": "^9.0.0",
    "speculate": "^2.1.1",
    "standard": "^16.0.3",
    "supertest": "^6.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jembi/openhim-core-js.git"
  },
  "keywords": [
    "openhim",
    "hie",
    "interoperability",
    "tls",
    "atna",
    "openhie"
  ],
  "author": "Jembi Health Systems NPC",
  "bugs": {
    "url": "https://github.com/jembi/openhim-core-js/issues"
  },
  "homepage": "http://openhim.org",
  "nyc": {
    "all": true,
    "include": [
      "src"
    ]
  }
}
