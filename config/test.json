{
  "mongo": {
    "url": "mongodb://localhost/openhim-test",
    "atnaUrl": "mongodb://localhost/openhim-test"
  },
  "logger": {
    "level": "error"
  },
  "api": {
    "enabled" : true,
    "httpsPort": 8080,
    "authWindowSeconds": 10,
    "truncateSize": 10,
    "truncateAppend": "\n[truncated ...]"
  },
  "statsd": {
    "enabled": true,
    "host": "localhost"
  },
  "application": {
    "name": "openhim.test"
  },
  "caching": {
    "enabled": false
  },
  "agenda": {
    "startupDelay": 0
  },
  "certificates": {
    "watchCert": false,
    "watchCertPath": "/path/to/certificates/folder",
    "watchKeyPath": "/path/to/keys/folder"
  }
}
